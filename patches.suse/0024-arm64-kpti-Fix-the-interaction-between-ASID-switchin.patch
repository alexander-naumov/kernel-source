+++ b/arch/arm64/lib/copy_from_user.S
@@ -67,7 +67,7 @@ ENTRY(__copy_from_user)
 	uaccess_enable x3, x4, x5
 	add	end, x0, x2
 #include "copy_template.S"
-	uaccess_disable x3
